{
  "python.testing.pytestArgs": [
    "tests"
  ],
  "python.testing.cwd": "./backend/ops_api",
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.analysis.autoImportCompletions": true,
  "python.terminal.activateEnvironment": true,
  "python.defaultInterpreterPath": "${workspaceFolder}/backend/ops_api/.venv/bin/python",
  "git.enableCommitSigning": true,
  "editor.defaultFormatter": "ms-python.black-formatter",
  "editor.formatOnSave": true,
  "black-formatter.args": [
    "--config",
    "./backend/ops_api/pyproject.toml"
  ],
  "flake8.args": [
    "--config",
    "./backend/ops_api/.flake8"
  ],
  "sqltools.connections": [
    {
      "previewLimit": 50,
      "server": "localhost",
      "port": 5432,
      "driver": "PostgreSQL",
      "name": "OPS in Docker",
      "database": "postgres",
      "username": "ops"
    }
  ],
  "[javascript]": {
    "editor.defaultFormatter": null
  },
  "terminal.integrated.profiles.osx": {
    "bash-pipenv": {
      "path": "bash",
      "args": ["-c", "cd ${workspaceFolder}/backend/ops_api && PIPENV_IGNORE_VIRTUALENVS=1 pipenv shell"],
      "icon": "terminal"
    },
    "zsh-pipenv": {
      "path": "zsh",
      "args": ["-c", "cd ${workspaceFolder}/backend/ops_api && PIPENV_IGNORE_VIRTUALENVS=1 pipenv shell"],
      "icon": "terminal"
    }
  },
  "terminal.integrated.defaultProfile.osx": "zsh-pipenv",
  "python.envFile": "${workspaceFolder}/.env",
  "python.testing.pytestPath": "${workspaceFolder}/backend/ops_api/.venv/bin/pytest"
}
